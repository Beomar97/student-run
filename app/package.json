{
	"name": "studentrun",
	"version": "1.0.0",
	"description": "Student Run Backend",
	"main": "backend/server.js",
	"scripts": {
		"prod": "cross-env NODE_ENV=production node backend/server.js",
		"dev": "npm-run-all --parallel watch-js watch-sass nodemon",
		"debug": "cross-env LOGLEVEL=debug npm run dev",
		"test": "jest",
		"nodemon": "nodemon backend/server.js",
		"watch-js": "npm-run-all --parallel watch-js-game watch-js-join",
		"watch-js-game": "watchify public/js/game.js -o public/build/game-bundle.js -v -d",
		"watch-js-join": "watchify public/js/join.js -o public/build/join-bundle.js -v -d",
		"watch-sass": "sass --no-source-map --watch public/styles/global.scss public/build/global.css",
		"build": "npm-run-all --parallel js-build css-build",
		"js-build": "npm-run-all --parallel game-bundle join-bundle",
		"css-build": "sass --no-source-map public/styles/global.scss public/build/global.css",
		"game-bundle": "browserify public/js/game.js -o public/build/game-bundle.js",
		"join-bundle": "browserify public/js/join.js -o public/build/join-bundle.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.zhaw.ch/PathFinder/StudentRun.git"
	},
	"author": "Marco Forster, Marvin Tseng, Manuel Berweger, Dan Hochstrasser, Adrian Schrempp",
	"license": "MIT",
	"dependencies": {
		"browserify": "^17.0.0",
		"config": "^3.3.4",
		"express": "^4.17.1",
		"fast-safe-stringify": "^2.0.7",
		"jquery": "^3.6.0",
		"matter-js": "^0.16.1",
		"mongoose": "^5.11.15",
		"morgan": "^1.10.0",
		"phaser": "^3.54.0",
		"socket.io": "^3.1.2",
		"socket.io-client": "^4.0.1",
		"sortedlist": "^0.3.1",
		"watchify": "^4.0.0",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-preset-env": "^1.7.0",
		"bulma": "^0.9.2",
		"cross-env": "^7.0.3",
		"eslint-config-prettier": "^8.3.0",
		"jest": "^26.6.3",
		"jest-sonar-reporter": "^2.0.0",
		"jsdom": "^16.5.3",
		"nodemon": "^2.0.7",
		"npm-run-all": "^4.1.5",
		"prettier": "2.2.1",
		"sass": "^1.32.11",
		"superagent": "^6.1.0",
		"supertest": "^6.1.3"
	}
}
